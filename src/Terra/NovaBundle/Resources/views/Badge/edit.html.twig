{% extends '::baseAdmin.html.twig' %}

{% block title %}Admin | Badge edit{% endblock %}

{% block body -%}
    <div id="breadcrumb">
      <a href="{{ path('badge') }}" title="" class="tip-bottom">Badge</a>
      <span class="current">{{ entity.name }}</span>
    </div>

    {{ form_start(edit_form, { 'attr': {'class' : 'form-horizontal'} }) }}
    <div class="control-group">
        <label class="control-label">Nom</label>
        <div class="controls">
            {{ form_widget(edit_form.name) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Récompense</label>
        <div class="controls">
            {{ form_widget(edit_form.reward) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Images</label>
        <div class="controls">
            {{ form_widget(edit_form.file) }}
        </div>
    </div>
    {{ form_widget(edit_form._token) }}
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary">Mettre à jour</button>
            <a href="{{ path('badge') }}"class="btn btn-default">Retour</a>
        </div>
    </div>
    {{ form_end(edit_form) }}
    
    {{form_start(delete_form)}}
    	<button type="submit" class="btn btn-danger">Supprimer</button>
    {{ form_end(delete_form) }}
{% endblock %}
