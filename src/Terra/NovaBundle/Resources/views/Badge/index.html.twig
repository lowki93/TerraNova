{% extends '::baseAdmin.html.twig' %}

{% block title %} Admin | Badge{% endblock %}

{% block body -%}
    <div id="breadcrumb">
        <a href="{{ path('badge') }}" title="" class="tip-bottom">Badge</a>
    </div>

    {% if entities %}
        <table class="table table-striped">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Path</th>
                    <th>Actions</th>
                </tr>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('badge_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.path }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('badge_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('badge_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
    <p>Il n'y a pas de badge</p>
    {% endif %}
    <a href="{{ path('badge_new') }}">Cr√©er un badge</a>
{% endblock %}
