{% extends '::base.html.twig' %}

{% block title %}Enseignant | Création de classe{% endblock %}

{% block stylesheets %}
    {% stylesheets
        'bundles/terranova/css/enseignant.sass'
        filter="cssrewrite,sass" output='css/enseignant.css' %}
           <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
	<div class="container">
	    <h1>Créer votre classe</h1>
	    <a class="new-class" href="javascript:history.back()"><img src="{{ asset('bundles/terranova/img/back-button.png') }}" alt="back-button">Retour aux élèves</a>
	    {{ form_start(form, { 'attr': {'class' : 'form-horizontal create-class'} }) }}
	    <div class="control-group">
	        <label class="control-label">Nom</label>
	        <div class="controls">
	            {{ form_widget(form.name) }}
	        </div>
	    </div>
	    <div class="control-group">
	        <label class="control-label">Niveau</label>
	        <div class="controls">
	            {{ form_widget(form.niveau) }}
	        </div>
	    </div>
	    {{ form_widget(form._token) }}
	    <div class="control-group">
	        <div class="controls">
	           <input type="image" src="{{ asset('bundles/terranova/img/button/validate.png') }}"/>
	        </div>
	    </div>
	</div>
{% endblock %}
