{% extends '::baseAdmin.html.twig' %}

{% block title %}Admin | établissement edit{% endblock %}

{% block body -%}
    <div id="breadcrumb">
      <a href="{{ path('terra_nova_admin_etablissement') }}" title="" class="tip-bottom">Etablissement</a>
      <span class="current">{{ entity.name }}</span>
    </div>

    {{ form_start(edit_form, { 'attr': {'class' : 'form-horizontal'} }) }}
    <div class="control-group">
        <label class="control-label">Numéro National</label>
        <div class="controls">
            {{ form_widget(edit_form.numeroNational) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Nom</label>
        <div class="controls">
            {{ form_widget(edit_form.name) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Type</label>
        <div class="controls">
            {{ form_widget(edit_form.type) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Adresse</label>
        <div class="controls">
            {{ form_widget(edit_form.adresse) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Code Postal</label>
        <div class="controls">
            {{ form_widget(edit_form.codePostal) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Ville</label>
        <div class="controls">
            {{ form_widget(edit_form.ville) }}
        </div>
    </div>
    {{ form_widget(edit_form.active) }}
    {{ form_widget(edit_form._token) }}
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary">Mettre à jour</button>
            <a href="{{ path('terra_nova_admin_etablissement') }}"class="btn btn-default">Retour</a>
        </div>
    </div>
    {{ form_end(edit_form)}}
    
    {{form_start(delete_form)}}
        <button type="submit" class="btn btn-danger">Supprimer</button>
    {{ form_end(delete_form) }}
{% endblock %}