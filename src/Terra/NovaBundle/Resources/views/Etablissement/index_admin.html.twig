{% extends '::baseAdmin.html.twig' %}

{% block title %}Admin | Etablissement Liste{% endblock %}

{% block body -%}
    <div id="breadcrumb">
      <a href="{{ path('terra_nova_admin_etablissement') }}" title="" class="tip-bottom">Etablissement</a>
    </div>

    <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Numeronational</th>
                <th>Name</th>
                <th>Type</th>
                <th>Adresse</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('etablissement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numeroNational }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.codePostal }}</td>
                <td>{{ entity.ville }}</td>
                <td>{% if entity.active == 0 %}non active{% else %}active{% endif %}</td>
                <td>
                    <a href="{{ path('etablissement_admin_edit', { 'id': entity.id }) }}">edit</a>
{#                 <ul>
                        <li>
                        <a href="{{ path('etablissement_show', { 'id': entity.id }) }}">show</a>
                    </li> #}
{#                     <li>
                        <a href="{{ path('etablissement_choose', { 'id': entity.id }) }}">choose</a>
                    </li> 
                </ul>#}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}