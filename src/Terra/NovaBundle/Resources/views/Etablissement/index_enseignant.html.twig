{% extends '::base.html.twig' %}

{% block title %}Etablissement | Liste{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des établissements</h1>
        <p class="error-content">Vous devez choisir un établissement ou rajouté le votre avant de continuer</p>
        {% if entities %}
            <table class="table table-striped">
                <tr>
                    <th>Numeronational</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Adresse</th>
                    <th>Codepostal</th>
                    <th>Ville</th>
                    <th>Actions</th>
                </tr>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.numeroNational }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.type }}</td>
                    <td>{{ entity.adresse }}</td>
                    <td>{{ entity.codePostal }}</td>
                    <td>{{ entity.ville }}</td>
                    <td>
                        <a href="{{ path('etablissement_choose', { 'id': entity.id }) }}">choisir</a>
                    </td>
                </tr>
                {% endfor %}
            </table>
        {% else %}
            <p class="error-content">Il n'y a pas d'établissement</p>
        {% endif %}
        <a class="btn" href="{{ path('etablissement_new') }}">Create votre établissement</a>
    </div>
{% endblock %}