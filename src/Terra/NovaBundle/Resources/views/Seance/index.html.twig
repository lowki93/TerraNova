{% block javascripts %}
    <script type="text/javascript">
        $('#myTab a:first').tab('show');
        $('#myTab a').click(function (e) {
          e.preventDefault();
          $(this).tab('show');
          resizeFunction.init();
        })

        
        $("form input.date").datepicker({
            dateFormat: 'dd/mm/yy', 
            firstDay:1
        }).attr("readonly","readonly");
    </script>    
{% endblock %}