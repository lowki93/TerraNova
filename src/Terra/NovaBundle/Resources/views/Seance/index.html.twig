{% extends '::base.html.twig' %}

{% block title%}Enseignant | Séances{% endblock %}

{% block stylesheets %}
    {% stylesheets
        'bundles/terranova/css/seance.sass'
        filter="cssrewrite,sass" output='css/seance.css' %}
           <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
