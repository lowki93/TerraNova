{% extends '::baseAdmin.html.twig' %}

{% block title %}Admin | Sous-theme{% endblock %}

{% block body -%}
    <div id="breadcrumb">
        <a href="{{ path('soustheme') }}" title="" class="tip-bottom">Sous-thèmes</a>
    </div>
    {% if entities %}
        <table class="table table-striped">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Thème</th>
                    <th>Actions</th>
                </tr>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('soustheme_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <th>Thème</th>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('soustheme_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('soustheme_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
       <p>Il n'y a pas de sous-thèmes</p>
    {% endif %}

    <a href="{{ path('soustheme_new') }}" class="btn btn-default">Créer un sous-thème</a>

    {% endblock %}
