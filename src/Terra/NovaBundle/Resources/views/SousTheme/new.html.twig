{% extends '::baseAdmin.html.twig' %}

{% block title %}Admin | Sous thème création{% endblock %}

{% block body -%}
    <div id="breadcrumb">
     	<a href="{{ path('terra_nova_admin_etablissement') }}" title="" class="tip-bottom">Thèmes</a>
    	<span class="current">Création d'un Sous thème</span>
    </div>

    {# {{ form(form) }} #}
    {{ form_start(form, { 'attr': {'class' : 'form-horizontal'} }) }}
    <div class="control-group">
        <label class="control-label">Nom</label>
        <div class="controls">
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Thème</label>
        <div class="controls">
            {{ form_widget(form.theme) }}
        </div>
    </div>


    {{ form_widget(form._token) }}
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary">Créer</button>
            <a href="{{ path('soustheme') }}"class="btn btn-default">Retour</a>
        </div>
    </div>
{% endblock %}
