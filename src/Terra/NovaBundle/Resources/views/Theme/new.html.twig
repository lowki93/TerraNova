{% extends '::baseAdmin.html.twig' %}

{% block title %}Admin | Creation d'un thème{% endblock %}

{% block body %}
    <div id="breadcrumb">
     	<a href="{{ path('terra_nova_admin_etablissement') }}" title="" class="tip-bottom">Thèmes</a>
    	<span class="current">Création d'un thème</span>
    </div>

    {{ form_start(form, { 'attr': {'class' : 'form-horizontal'} }) }}
    <div class="control-group">
        <label class="control-label">Nom</label>
        <div class="controls">
            {{ form_widget(form.name) }}
        </div>
    </div>


    {{ form_widget(form._token) }}
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary">Créer</button>
            <a href="{{ path('theme') }}"class="btn btn-default">Retour</a>
        </div>
    </div>
{% endblock %}
