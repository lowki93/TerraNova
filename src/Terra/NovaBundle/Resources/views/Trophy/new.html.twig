{% extends '::baseAdmin.html.twig' %}

{% block title %}Admin | Creation d'un trophé{% endblock %}

{% block body -%}
    <div id="breadcrumb">
     	<a href="{{ path('trophy') }}" title="" class="tip-bottom">Trophé</a>
    	<span class="current">Création d'un trophé</span>
    </div>

    {{ form_start(form, { 'attr': {'class' : 'form-horizontal'} }) }}
    <div class="control-group">
        <label class="control-label">Nom</label>
        <div class="controls">
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Sous Theme</label>
        <div class="controls">
            {{ form_widget(form.sousTheme) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Images</label>
        <div class="controls">
            {{ form_widget(form.file) }}
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Type</label>
        <div class="controls">
            {{ form_widget(form.type) }}
        </div>
    </div>
    {{ form_widget(form._token) }}
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary">Créer</button>
            <a href="{{ path('trophy') }}"class="btn btn-default">Retour</a>
        </div>
    </div>
{% endblock %}
